<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Standart_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight" >1</item>
    </style>
    <style name="Keyboard_style" parent="Standart_Style">
        <item name="android:textSize">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextView_style" parent="Standart_Style">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLength">1</item>
    </style>
    <style name="LayoutGrid_style" parent="Standart_Style">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:ellipsize">start</item>
    </style>

</resources>


