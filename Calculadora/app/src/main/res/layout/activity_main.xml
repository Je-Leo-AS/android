<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/TextExpressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:text=""/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TextResultado"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resto"
            style="@style/Operators_Button"
            android:text="%"
            android:onClick="onOperationClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/elev"
            style="@style/Operators_Button"
            android:text="^"
            android:onClick="onOperationClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/divisao"
            style="@style/Operators_Button"
            android:text="/"
            android:onClick="onOperationClick"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/AC"
            style="@style/Operators_Button"
            android:text="AC"
            android:onClick="onClearButtonClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/bt_1"
            style="@style/Num_Button"
            android:text="1"
            android:onClick="onNumberButtonClick"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_2"
            style="@style/Num_Button"
            android:text="2"
            android:onClick="onNumberButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_3"
            style="@style/Num_Button"
            android:text="3"
            android:onClick="onNumberButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exe"
            style="@style/Operators_Button"
            android:text="exe"
            android:onClick="onEqualClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_4"
            style="@style/Num_Button"
            android:text="4"
            android:onClick="onNumberButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_5"
            style="@style/Num_Button"
            android:text="5"
            android:onClick="onNumberButtonClick"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_6"
            style="@style/Num_Button"
            android:text="6"
            android:onClick="onNumberButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/soma"
            style="@style/Operators_Button"
            android:text="+"
            android:onClick="onOperationClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_7"
            style="@style/Num_Button"
            android:text="7"
            android:onClick="onNumberButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_8"
            style="@style/Num_Button"
            android:text="8"
            android:onClick="onNumberButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_9"
            style="@style/Num_Button"
            android:text="9"
            android:onClick="onNumberButtonClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/subtracao"
            style="@style/Operators_Button"
            android:text="-"
            android:onClick="onOperationClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/virgula"
            style="@style/Operators_Button"
            android:text="."
            android:onClick="onButtonDotClick"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_0"
            style="@style/Num_Button"
            android:text="0"
            android:onClick="onNumberButtonClick"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/C"
            style="@style/Operators_Button"
            android:text="C"
            android:onClick="onDeleteButtonClick"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multiplicacao"
            style="@style/Operators_Button"
            android:text="*"
            android:onClick="onOperationClick"/>


    </LinearLayout>

</LinearLayout>